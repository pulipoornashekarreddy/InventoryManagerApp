<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#00adf7"
    tools:context="com.psrapps.www.inventorymanagerapp.Adminsignup">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="32dp">
            <Button
                android:id="@+id/signup_enter_button_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:onClick="enter_signup_admin"
                android:text="Sign Up"
                android:textColor="#00adf7"
                android:layout_below="@+id/TFEmployeeID_admin"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp" />

            <TextView
                android:id="@+id/TVUsername_s_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="First name"
                android:textColor="@android:color/background_light"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/TFUsername_s_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/TVUsername_s_admin"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/TVPassword_s_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/TFUsername_s_admin"
                android:layout_marginTop="11dp"
                android:text="Password"
                android:textColor="@android:color/background_light"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/TFPassword_s_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/TVPassword_s_admin"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:inputType="textPassword" />
            <TextView
                android:id="@+id/TVEmployeeID_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/TFPassword_s_admin"
                android:text="Employee ID"
                android:textColor="@android:color/background_light"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/TFEmployeeID_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/TVEmployeeID_admin"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
