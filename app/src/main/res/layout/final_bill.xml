<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00adf7">

    <TextView
        android:id="@+id/TV_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="40dp"
        android:text="Price"
        android:textColor="@android:color/background_light"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/TF_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TV_price"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:text=""
        android:textColor="@android:color/background_dark" />

    <TextView
        android:id="@+id/TV_quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/TF_price"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="10dp"
        android:text="Quantity"
        android:textColor="@android:color/background_light"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/TF_quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/TV_quantity"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:text=""
        android:textColor="@android:color/background_dark" />

    <Button
        android:id="@+id/continue_adding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TF_quantity"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:text="continue adding"
        android:onClick="continue_to_add"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:textColor="#00adf7"
        android:textSize="18sp" />

    <Button
        android:id="@+id/done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/continue_adding"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="26dp"
        android:background="#FFFFFF"
        android:onClick="done"
        android:padding="18dp"
        android:text="Logout"
        android:textColor="#00adf7"
        android:textSize="16sp" />
</RelativeLayout>