<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.psrapps.www.inventorymanagerapp">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Login"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".list"
            android:label="@string/title_activity_list"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BScanner"
            android:screenOrientation="portrait" />
        <activity android:name=".Final_bill" />
        <activity android:name=".Signup" />
        <activity android:name=".Digital_payment" />
        <activity android:name=".AddItem"></activity>
        <activity android:name=".Adminlogin"></activity>
        <activity android:name=".Adminsignup"></activity>
        <activity android:name=".AddConfirmation"></activity>
    </application>

</manifest>